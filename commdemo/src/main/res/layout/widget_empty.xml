<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgErrorState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/page_failed_bg"
        android:contentDescription="@null"
        android:visibility="gone" />

    <com.android.common.ui.avloadingindicatorview.AVLoadingIndicatorView
        android:id="@+id/barLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicator="BallSpinFadeLoader"
        app:indicator_color="@color/lite_blue" />

    <TextView
        android:id="@+id/textLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="正在加载中..." />
</LinearLayout>
